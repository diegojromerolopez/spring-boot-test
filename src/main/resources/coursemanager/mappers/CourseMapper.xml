<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="coursemanager.mappers.CourseMapper">
 
  <select id="getCourseById" parameterType="int" resultType="coursemanager.domain.Course">
     SELECT * 
     FROM course 
     WHERE id = #{id}
  </select>
  
   <resultMap type="Course" id="CourseResult">
    <id property="id" column="id"/>
    <result property="title" column="title"/>
    <result property="description" column="description"/>
    <result property="number_of_hours" column="number_of_hours"/>
    <result property="level" column="level"/>   
    <result property="is_active" column="is_active"/>   
   </resultMap>
   
  <select id="getAllCourses" resultMap="CourseResult">
      SELECT * FROM course WHERE is_active = 1
      ORDER BY title ${_parameter}
  </select>
   
  <insert id="insertCourse" parameterType="Course" useGeneratedKeys="true" keyProperty="id">
   INSERT INTO course(title, description, number_of_hours, level, is_active)
    VALUES(#{title}, #{description}, #{number_of_hours}, #{level}, #{is_active})
  </insert>
   
  <delete id="deleteCourse" parameterType="int">
    DELETE FROM course WHERE id = #{id}
  </delete>
   
</mapper>